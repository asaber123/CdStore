
@model cdStore.Models.Cd

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cd</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CdName" class="control-label"></label>
                <input asp-for="CdName" class="form-control" />
                <span asp-validation-for="CdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <label asp-for="Artist"></label></br>
                <select class="Artist" asp-for="Artist">
                    @* <option value="Skate">@Html.DisplayFor(model => model.ArtistName)</option> *@
                    <option value="Skatepark">Skatepark</option>
                    <option value="Improvements">Improvements</option>
                    <option value="Courses">Courses</option>
                    <option value="Skate Camps">Skate Camps</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
